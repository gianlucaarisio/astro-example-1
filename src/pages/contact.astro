---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us - AgroFuture" description="Get in touch with AgroFuture.">
  <Header />
  <main class="py-20">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-center text-green-400 mb-12">Contact Us</h1>
      <div class="max-w-md mx-auto">
        <form class="bg-gray-800 p-8 rounded-lg shadow-lg">
          <div class="mb-4">
            <label for="name" class="block text-green-300 mb-2">Name</label>
            <input type="text" id="name" class="w-full bg-gray-700 text-white border border-gray-600 rounded-lg py-2 px-4 focus:outline-none focus:ring-2 focus:ring-green-400" />
          </div>
          <div class="mb-4">
            <label for="email" class="block text-green-300 mb-2">Email</label>
            <input type="email" id="email" class="w-full bg-gray-700 text-white border border-gray-600 rounded-lg py-2 px-4 focus:outline-none focus:ring-2 focus:ring-green-400" />
          </div>
          <div class="mb-4">
            <label for="message" class="block text-green-300 mb-2">Message</label>
            <textarea id="message" rows="4" class="w-full bg-gray-700 text-white border border-gray-600 rounded-lg py-2 px-4 focus:outline-none focus:ring-2 focus:ring-green-400"></textarea>
          </div>
          <button type="submit" class="w-full bg-green-500 text-white font-bold py-2 px-4 rounded-lg hover:bg-green-600 transition-colors">Send Message</button>
        </form>
      </div>
    </div>
  </main>
  <Footer />
</Layout>
